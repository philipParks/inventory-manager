<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="loginAP" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="parks.inventorymanager.controller.LoginController">
    <HBox alignment="CENTER" layoutY="-1.0" prefHeight="115.0" prefWidth="600.0">
        <padding>
            <Insets left="10.0" />
        </padding>
        <Label alignment="CENTER" contentDisplay="CENTER" text="Engine-uity Rebuilds Inventory Manager">
            <font>
                <Font name="System Bold" size="30.0" />
            </font>
        </Label>
    </HBox>
    <VBox layoutY="126.0" prefHeight="200.0" prefWidth="600.0">
        <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
        </padding>
        <Label alignment="CENTER" contentDisplay="CENTER" text="Please enter your credentials">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
            <padding>
                <Insets left="25.0" right="25.0" />
            </padding>
            <Label prefWidth="102.0" text="Username" />
            <TextField fx:id="userNameTxtFld" promptText="User Name" />
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="35.0" layoutY="35.0" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
            <padding>
                <Insets left="25.0" right="25.0" />
            </padding>
            <Label prefWidth="102.0" text="Password" />
            <PasswordField fx:id="passwordTxtFld" promptText="Password" />
        </HBox>
    </VBox>
    <Label fx:id="warnLabel" layoutX="14.0" layoutY="345.0" text="System Message">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <HBox alignment="CENTER" layoutX="386.0" layoutY="326.0" prefHeight="60.0" prefWidth="200.0" spacing="14.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <Button mnemonicParsing="false" onAction="#submitClicked" text="Submit" />
        <Button mnemonicParsing="false" onAction="#cancelClicked" text="Cancel" />
    </HBox>
</AnchorPane>
